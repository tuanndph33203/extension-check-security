{
  "manifest_version": 3,
  "name": "Angular Chrome Extension",
  "version": "1.0.0",
  "description": "Chrome extension built with Angular",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "scripting", "tabs"],
  "content_scripts": [
    {
    "matches": ["<all_urls>"], 
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://*/*", "http://*/*"]
}
